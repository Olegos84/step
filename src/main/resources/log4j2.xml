<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
  <Appenders>
    <Console name="Console" target="SYSTEM_OUT">
      <PatternLayout pattern="%d{dd.MM.yyyy HH:mm:ss.SS}:%c{1}:[%5level]: %msg%n"/>
    </Console>
    <File name="FileAppender" fileName="external_resources/report/logs/test.log" append="false">
      <PatternLayout>
        <Pattern>%d{dd.MM.yyyy HH:mm:ss.SS}:%c{1}:[%5level]: %msg%n</Pattern>
      </PatternLayout>
    </File>
  </Appenders>
  <Loggers>
    <Logger name="org.itstep.selenium" level="debug" additivity="false">
      <AppenderRef ref="FileAppender"/>
      <AppenderRef ref="Console"/>
    </Logger>
    <Root level="error">
      <AppenderRef ref="Console"/>
      <AppenderRef ref="FileAppender"/>
    </Root>
  </Loggers>
</Configuration>
